#!/bin/bash

set -x
#
DIR=$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )

TYPE=$1
ID=$2

[[ -z $IP ]] && IP=`${DIR}/ip-of-instance $TYPE $ID`

OPTS="-o UserKnownHostsFile=/dev/null -o CheckHostIP=no -o LogLevel=ERROR -o StrictHostKeyChecking=no -i ${DIR}/../tmp/key.pem"

if [[ -n $SCP ]]; then
  scp $OPTS admin@$IP:"${@:3}"
else
  ssh $OPTS admin@$IP "${@:3}"
fi
