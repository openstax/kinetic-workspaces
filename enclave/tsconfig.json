{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["ES2015"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "nodenext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "types": ["node"],
    "jsx": "react-jsx"
  },
  "include": ["src", "server"],
  "references": [{ "path": "./tsconfig.node.json" }]

}
